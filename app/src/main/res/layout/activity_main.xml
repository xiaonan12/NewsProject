<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_drawerlayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/img_menu"
            android:onClick="OpenLeftMenu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bottom_tab_bg"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_home"
                    android:text="首页"
                    style="@style/BottomTabStyle"
                    android:drawableTop="@drawable/btn_home_selector"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rb_news"
                    android:text="新闻中心"
                    style="@style/BottomTabStyle"
                    android:drawableTop="@drawable/btn_news_selector"
                    />
                <RadioButton
                    android:id="@+id/rb_smart"
                    android:text="智慧服务"
                    style="@style/BottomTabStyle"
                    android:drawableTop="@drawable/btn_smart_selector"
                    />
                <RadioButton
                    android:id="@+id/rb_gov"
                    android:text="政务"
                    style="@style/BottomTabStyle"
                    android:drawableTop="@drawable/btn_gov_selector"
                    />
                <RadioButton
                    android:id="@+id/rb_setting"
                    android:text="设置"
                    style="@style/BottomTabStyle"
                    android:drawableTop="@drawable/btn_setting_selector"
                    />

            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/id_left_menu"
        android:name="com.buaa.news.news.base.imp.MenuLeftFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT" />

</android.support.v4.widget.DrawerLayout>


